@model CarExplorer.ViewModels.CarViewModel

<div class="container mt-5">
    <h2 class="mb-4">Select Car Details:</h2>
    <div class="row g-3">
        <div class="col-md-4">
            <select id="MakeSelect" asp-for="SelectedMakeId" asp-items="Model.Makes" class="form-select h-100">
                <option value="">-- Select Make --</option>
            </select>
        </div>

        <div class="col-md-4">
            <input type="number" id="YearInput" asp-for="SelectedYear" class="form-control h-100" placeholder="Enter Year" min="1950" max="2025" />
        </div>

        <div class="col-md-4">
            <select id="VehicleTypeSelect" asp-for="SelectedVehicleType" class="form-select h-100">
                <option value="">-- Vehicle Type --</option>
            </select>
        </div>
    </div>

    <h3 class="mt-5">Available Models:</h3>
    <div id="ModelsList" class="row mt-3 justify-content-start"></div>
</div>

@section Scripts {
     <script src="~/js/home/index.js"></script>

}
